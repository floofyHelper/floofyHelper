generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model guild {
  id           String               @id @map("_id")
  settings     guildSettingsFields?
  verification guildVerification[]
}

// Guild Settings
type guildSettingsFields {
  verification guildSettingsFieldsVerification
}

type guildSettingsFieldsVerification {
  channel   String?
  questions String[]
}

// Guild Verification
model guildVerification {
  id          String   @id @map("_id")
  age         String?
  submissions String[]
  guild       guild    @relation(fields: [guildId], references: [id])
  guildId     String
}
