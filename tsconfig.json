{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false,
    "incremental": true
  }
}
